<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PProjekt.Views.UserFile"
             NavigationPage.HasBackButton ="False"
             BackgroundImageSource="backgroung.png">
    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="10">


        <Button
            FontSize="20"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            x:Name="NameOfUser"
            TextColor="#00042E"
            BackgroundColor="#00cbfe"
            WidthRequest="330"
            HeightRequest="50"
            Margin="0,10,0,0"/>


        <Button
            Text="LogOut"
            x:Name="BottomBtn"
            TextColor="White"
            BackgroundColor="#004A75"
            BorderColor="#00042E"
            BorderWidth="2"
            WidthRequest="250"
            Clicked="LogOut_Clicked"/>


        <Editor
            x:Name="UserText"
            WidthRequest="330"
            HeightRequest="410"
            BackgroundColor="WhiteSmoke"
            TextColor="Black"/>

    </VerticalStackLayout>
</ContentPage>